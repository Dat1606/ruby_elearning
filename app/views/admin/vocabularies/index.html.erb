<div class="col-md-4 word-selects" style="margin-top: 30px;">
  <h3><%= t "filter_by" %></h3>
  <select id="select-vocabulary-lesson" class="form-control">
    <option value="0"><%= t "all_lesson" %></option>
    <%= render partial: "lessons/lesson_for_filter", collection: @lessons, as: :lesson %>
  </select>
</div>

<div class="col-md-10 col-md-offset-1">
  <%= link_to new_admin_vocabulary_path , class: "btn btn-success create-btn" do %>
    <i class="glyphicon glyphicon-plus"></i>
    <%= t "create_new_vocabulary" %>
  <% end %>
  <table class="table table-hover text-center">
    <thead>
      <tr>
        <th class="col-md-1 text-center"><%= t "number" %></th>
        <th class="col-md-1 text-center"><%= t "word_name" %></th>
        <th class="col-md-2 text-center"><%= t "belong_to" %></th>
        <th class="col-md-2 text-center"><%= t "description" %></th>
        <th class="col-md-2 text-center"><%= t "example" %></th>
        <th class="col-md-2 text-center"><%= t "action" %></th>
      </tr>
    </thead>
    <tbody id="vocabulary-list">
      <%= render @vocabularies %>
    </tbody>
  </table>
    <%= paginate @vocabularies %>
</div>

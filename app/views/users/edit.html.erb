<% provide(:title, t("edit_user")) %>
<div class="container">
<h1><%= t("update_your_profile") %></h1>
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages",  object: f.object %>
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <span class="picture">
        <%= f.label :Upload_Picture %>
        <%= f.file_field :avatar, accept: 'image/jpeg,image/gif,image/png', class: "form-control" %>
      </span>
      <%= f.submit t("save_change"), class: "btn btn-primary submit-btn" %>
      <% end %>
  </div>
</div>

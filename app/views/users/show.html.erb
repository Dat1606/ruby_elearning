<div class="container">
  <div class="user">
    <div class="user_avatar">
      <% if @user.avatar? %>
        <%= image_tag @user.avatar.url , class: "user_avatar" %>
      <% else %>
        <%= image_tag "/assets/user.png", class: "user_avatar" %>
      <% end %>
    </div>
    <div class="user_info col-md-3">
      <p class="user_name"><%= @user.name %><%=link_to "", edit_user_path(@user), class: "glyphicon glyphicon-pencil" %></p>
      <p class="user_email"><%= t "email" %><%= @user.email %></p>
      <p class="user_email"><%= t "total_point" %><%= @user_point %></p>
    </div>
  </div>
  <div class="user-lesson col-md-7">
    <table class="table table-hover">
      <thead>
        <tr>
          <th class="col-md-2 text-center"><%= t "lesson" %></th>
          <th class="col-md-1 text-center"><%= t "point" %></th>
          <th class="col-md-2 text-center"><%= t "status" %></th>
          <th class="col-md-2 text-center"><%= t "created_at" %></th>
        </tr>
      </thead>

      <tbody>
        <%= render partial: "user_lessons/current_user_lesson", collection: @user_lessons, as: :user_lesson  %>
      </tbody>

    </table>
  </div>
</div>
